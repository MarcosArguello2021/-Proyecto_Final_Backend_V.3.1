<html lang='en'>
<head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    
    <title>Tercera entrega del proyecto final</title>
</head>

<body>

    <div class='container mt-5 p-3 bg-secondary'>
        <div class="container-sm">
            <div>
                <div class="text-bg-secondary text-center p-3 mb-3">
                    <h2>Registro de usuario</h2>
                </div>
            </div>
            <div class='row'>
                <form action="/api/registro" enctype="multipart/form-data" method="post">
                    <input type="email" class="form-control mb-2" placeholder="Ingrese su mail" name="username">
                    <input type="text" class="form-control mb-2" name="nombre" placeholder="Ingrese su nombre" id="nombre" required="required" />
                    <input type="text" class="form-control mb-2" name="direccion" placeholder="Ingrese su dirección" id="direccion"
                        required="required" />
                    <input type="number" class="form-control mb-2" name="edad" placeholder="Ingrese su edad" id="edad" required="required" />
                    <select class="form-control mb-2" name="pais" id="country">
                        <option value="" disabled selected>Seleccione la característica del país</option>
                        {{#each pais}}
                        <option value="{{dial_code}}">{{name}} {{dial_code}} </option>
                        {{/each}}
                    </select>
                    <input type="tel" class="form-control mb-2" placeholder="Ingrese su número telefónico" name="telefono" id="telefono" required="required" />
                    <input type="file" class="form-control mb-2" name="avatar"/>
                    <input type="password" class="form-control mb-2" placeholder="Ingrese su password" name="password">
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                    <hr>
                    <button type="button" onclick="location.href='/api/login'" class="btn btn-primary">Ir a
                        Login</button>
                </form>
            </div>
        </div>
    </div>
<script src="js/main.js"></script>
</body>

</html>